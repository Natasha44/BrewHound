@model IEnumerable<BrewHounds.Models.ShoppingCart>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    int qtyTotal = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beer.Name)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {

        qtyTotal = qtyTotal + Int32.Parse(item.Quantity);

        
        
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)

                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beer.Name)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
        
        
    }
    <tr>
        <td>Total Quantity:</td>
        <td colspan="2">@(qtyTotal)</td>
    </tr>
        

    </table>

    <a href="~/Home/Checkout" class="btn btn-default">Checkout</a>
</body>
</html>
